{
    "version": 2,
    "builds": [{ "src": "package.json", "use": "@now/static-build" }],
    "routes": [
        {
            "src": "(.*).json",
            "dest": "/index.json"
        },
        {
            "src": "(.*).js",
            "dest": "/index.js"
        },
        {
            "src": "/.*",
            "dest": "/index.html"
        }
    ]
}
